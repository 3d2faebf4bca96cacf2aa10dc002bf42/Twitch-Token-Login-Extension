{
  "manifest_version": 3,
  "name": "Twitch Token Login",
  "version": "1.0.0",
  "description": "Login to Twitch using an auth token",
  "permissions": ["scripting", "cookies", "tabs", "storage"],
  "host_permissions": ["https://*.twitch.tv/*"],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
