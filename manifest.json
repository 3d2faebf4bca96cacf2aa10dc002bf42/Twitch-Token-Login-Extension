{
  "manifest_version": 3,
  "name": "Twitch Token Login",
  "version": "1.0.0",
  "description": "Login to Twitch using an auth token",
  "author": "https://github.com/3d2faebf4bca96cacf2aa10dc002bf42",
  "homepage_url": "https://github.com/3d2faebf4bca96cacf2aa10dc002bf42/Twitch-Token-Login-Extension",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://*.twitch.tv/*"],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  }
}
